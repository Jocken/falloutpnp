<h2>Traits</h2>
<table>
  <tr>
    <th colspan="2"><p>Trait</p></th>
    <th></th>
  </tr>
  {{#if item.type == 'trait'}}
    {{#each items as |item|}}
  {{/if}}
    <tr>
      <td>
        <div class="data-field clickable-open" data-open-item="{{item._id}}"></div>
      </td>
      <td style="width: 100%;">
        <div class="input-field">
          <input
            type="text"
            name="item.name"
            data-item-id="{{item._id}}"
            data-update-item="name"
            value="{{ifThen (eq item.name 'EMPTY_ITEM_NAME') '' item.name}}"
          />
        </div>
      </td>
      <td>
        <div class="data-field clickable-delete" data-delete-item="{{item._id}}"></div>
      </td>
    </tr>
  {{/each}}
  <tr>
    <td colspan="5">
      <div class="data-field clickable-block" style="text-align: center;" data-create-item="custom"></div>
    </td>
  </tr>
</table>
